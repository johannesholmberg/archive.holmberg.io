---
layout: null
---
<?xml version="1.0" encoding="UTF-8"?>
<rss version="2.0" xmlns:atom="http://www.w3.org/2005/Atom">
  <channel>
    <title>{{ site.author | xml_escape }}: Latest Posts &amp; Links</title>
    <description>{{ site.description | xml_escape }}</description>
    <link>{{ site.url }}</link>
    <atom:link href="{{ site.url }}/feed.xml" rel="self" type="application/rss+xml" />
    {% for post in site.posts limit:10 %}
      <item>
        <title>
          {% if post.categories contains "links" %}Link: {% endif %}{{ post.title | xml_escape }}
        </title>
        <description>
          {{ post.content | xml_escape }}
          {% if post.categories contains "links" %}
            {% assign full_url = post.ref_url | remove: "http://" | remove: "https://" %}
            {% assign url = full_url | split: "/" %}
            <p>
              <a href="{{ post.ref_url }}">
                Read on {{ url[0] }}
              </a>
            </p>
          {% endif %}
        </description>
        <pubDate>{{ post.date | date: "%a, %d %b %Y %H:%M:%S %z" }}</pubDate>
        <link>
          {% if post.categories contains "links" %}
            {{ post.ref_url }}
          {% else %}
            {{ site.url }}{{ post.url }}
          {% endif %}
        </link>
        <guid isPermaLink="true">
          {% if post.categories contains "links" %}
            {{ post.ref_url }}
          {% else %}
            {{ site.url }}{{ post.url }}
          {% endif %}
        </guid>
      </item>
    {% endfor %}
  </channel>
</rss>
